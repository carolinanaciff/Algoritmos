Algoritmo "soma_multiplos"

Var
    num, soma, i: inteiro

Inicio

      escreva("Digite um numero: ")
      leia(num)
      
      soma := 0
      para i de 1 ate num faca
           se i mod 2 = 0 entao
           soma := soma + i
           fimse
      fimpara
      
